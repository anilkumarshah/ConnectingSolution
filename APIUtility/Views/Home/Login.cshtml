
@{
    Layout = null;
    ViewBag.Title = "TranServ DMT - Login";

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="" data-target="#myNavbar">
                    <span class="icon-bar">a</span>
                    <span class="icon-bar">s</span>
                    <span class="icon-bar">d</span>
                </button>
                <a class="navbar-brand" href="#">DMT Express </a>
            </div>

        </div>
    </nav>
    <div class="container form-group">
        <section id="loginForm">
            @using (Html.BeginForm())
            {
                <div class="panel panel-default text-uppercase" style="width:30%;">
                    <div class="panel-heading ">Login</div>
                    <div class="panel-body">
                        <div class="form-group text-uppercase">
                            <label for="usr">User Name:</label>
                            @Html.TextBox("txtUserName",null, new { @class = "form-control", placeholder = "Enter User Name", title = "Enter User Name", maxlength = "10", required = "required" })
                            @*<input type="text" class="form-control" id="usr"  />*@
                        </div>
                        <div class="form-group">
                            <label for="usr">Password:</label>
                            @Html.Password("txtPassword",null,new {@class="form-control", placeholder="Enter Password", data_toggle="tooltip", title="Enter Password", data_placement="top", maxlength="10", required="required" });
                            @*<input type="password"  class="form-control" id="pwd" placeholder="Enter Password" data-toggle="tooltip" title="Enter Password" data-placement="top" maxlength="10" required="required"/>*@
                        </div>
                        <div class="btn-group">
                            <input type="submit" id="btnSubmitExist" name="btnSubmit" value="Login" class="btn btn-success" />
                            &nbsp;&nbsp;&nbsp;
                            <input type="button" id="btnSubmit" name="btnSubmit" value="Reset" class="btn btn-info" />
                        </div>
                    </div>
                </div>
            }
        </section>
        <div class="form-group">
            <center>
                <img src="image/Udio Logo_Powered by RBL Bank.png" class="img-responsive text-center" alt="UDIO Logo" width="104" height="60">
            </center>
        </div>
        <footer>
            2017 <span class="glyphicon glyphicon-copyright-mark"></span> &nbsp;Copyright. Agent Pvt Ltd.@*&copy; @DateTime.Now.Year - My ASP.NET Application*@
        </footer>
    </div>
    
    @*<div class="panel panel-footer">2017 <span class="glyphicon glyphicon-copyright-mark"></span> &nbsp;Copyright. Agent Pvt Ltd.</div>*@
</body>
</html>
