@model TSVSite.Models.ContactUsModel
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div id="breadcrumb">
    <div class="container">
        <div class="breadcrumb">
            <li>@Html.ActionLink("Home", "Home", "CS")</li>
            <li>Contact</li>
        </div>
    </div>
</div>

@*<div class="map">
    <div id="google-map" data-latitude="40.713732" data-longitude="-74.0092704"></div>
</div>*@

<section id="contact-page">
    <div class="container">
        <div class="center">
            <h2>Drop Your Message</h2>
            <p>Kindly share your business requirement with us.</p>
        </div>
        <div class="row">
            <div class="status alert alert-success" style="display: none"></div>
            <div class="col-md-6 col-md-offset-3">
                <div id="sendmessage" style="display: @(ViewBag.ShowDiv ? "block" : "none")">Your message has been sent. Thank you!</div>
                <div id="errormessage"></div>
                @using (Html.BeginForm("ContactUs", "CS", FormMethod.Post, new { autocomplete="off"}))
                {
                    @*<div class="form-group">
                        @Html.DisplayNameFor(m=>m.Name)
                        @Html.TextBox("txtName1", null, new { @class = "form-control", placeholder = "Your Name", data_rule = "minlen:4", data_msg = "Please enter at least 4 chars", required = "required" })
                    </div>*@

                    <div class="form-group">
                        @Html.LabelFor(m => m.Name,new {style= "color:#FF6347;" })
                        @Html.TextBoxFor(m => m.Name, "Anil Shah",new {@class= "form-control",placeholder = "Your Name", data_rule = "minlen:4", data_msg = "Please enter at least 4 chars", required = "required" })
                        @*<input type="text" name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />*@
                        @*<div class="validation"></div>*@
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.MobileNo, new { style = "color:#FF6347;" })
                        @Html.TextBoxFor(m => m.MobileNo, "9819448145", new { @class = "form-control", placeholder = "Your Mobile Number", data_rule = "minlen:4", data_msg = "Please enter valid mobile no", required = "required" })
                        @*<input type="text" name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />*@
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { style = "color:#FF6347;" })
                        @Html.TextBoxFor(m => m.Email, "anil.shah@udio.in", new { @class = "form-control", placeholder = "Your Email", data_rule = "email", data_msg = "Please enter valid email", required = "required" })
                        @*<input type="email" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />*@
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BusinessWebsite, new { style = "color:#FF6347;" })
                        @Html.TextBoxFor(m => m.BusinessWebsite, "http://www.udio.in", new { @class = "form-control", placeholder = "Your Business Website" })
                        @*<input type="email" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />*@
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Subject, new { style = "color:#FF6347;" })
                        @Html.TextBoxFor(m => m.Subject, "My business requirement", new { @class = "form-control", placeholder = "Subject", data_rule = "minlen:8", data_msg = "Please enter at least 8 chars of subject", required = "required" })
                        @*<input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" data-rule="minlen:8" data-msg="Please enter at least 8 chars of subject" />*@
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BusinessMessage, new { style = "color:#FF6347;" })
                        @Html.TextAreaFor(m => m.BusinessMessage, new { @class = "form-control", placeholder = "Message", rows = "7", data_rule = "minlen:8", data_msg = "Please write something for us", required = "required" })
                        @*<textarea class="form-control" name="message" rows="7" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>*@
                        <div class="validation"></div>
                    </div>
                    <div class="text-center">
                <button type="submit" name="submit" class="btn btn-primary btn-lg" required="required" >Submit Message</button></div>
              
                }
            </div>
        </div><!--/.row-->
    </div><!--/.container-->
</section><!--/#contact-page-->

